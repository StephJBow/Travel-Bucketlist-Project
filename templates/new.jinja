{% block content %}

<html>
    <body>
        <div class="new_form">
        <h1>Add a New Destination</h1>
        <h3>Add from existing countries:</h3>
        <form id=indented_form action="/cities/new" method="POST">
            <label for="country_id">Country:</label>
            <select name="country_id" id="country_id" >
                {% for country in countries %}
                    <option {% if country.id == country_id %} selected="selected" {%endif%} value="{{ country.id }}">{{country.country_name}}</option>
                {% endfor %}
            </select> <br>
            <label for="city_name">City:</label>
            <input class="text_box" type="text" name="city_name" id="city_name" /> <br>
            <label for="image_url">Image URL:</label>
            <input class="text_box" type="text" id="image_url" name="image_url"> <br>
            <label for="visited">Destination Visited?</label>
            <input type="checkbox" id="visited" name="visited" /> <br>
            <input id="add_button" type="submit" value="Add Destination">
        </form>
        </div>
