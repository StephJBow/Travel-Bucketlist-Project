{% extends 'base.jinja'%}

{% block content %}
<body>

<table id="list_here">
    <tr>
        <th>Country</th>
        <th>City</th>
        <th>Visited</th>
    </tr>

    {% for city in cities %}
    <tr>
        {% if city.visited %}
            <td>{{ city.country.country_name }}</td>
            <td>{{ city.city_name }} </td>
            <td><span> &#9989;</span></td>
            <td><a href="/cities/{{ city.id }}"><b>More Details</b></a></td>
        {% endif %}</td>
            
    </tr>
    {% endfor %}
</table>   
 
<br><p><a href="/cities" class="return_home">Return to Bucketlist</a></p>  

</body>


{% endblock %}